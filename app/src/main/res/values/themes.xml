<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<style name="Theme.BebaAgua" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/teal_200</item>
    <item name="colorPrimaryDark">@color/teal_500</item>
    <item name="colorAccent">@color/white</item>
    <item name="colorSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/teal_200_transparent</item>
    <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="BackgroundForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_water_light</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="LinearLayoutForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ToolbarForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:title" />
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
    </style>

    <style name="TimePickerForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:headerBackground">@color/teal_200_transparent</item>
        <item name="android:numbersSelectorColor">@color/teal_200_transparent</item>
        <item name="android:numbersBackgroundColor">@color/white_transparent</item>
    </style>

    <style name="EditTextForm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textColorHint">@color/black_transparent_hint</item>
        <item name="android:maxLength">5</item>
        <item name="android:maxEms">100</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="ButtonForm">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button_initial</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="ButtonFormSee">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">64dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LinearSeeSchedulesForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:layout_marginBottom">128dp</item>
        <item name="android:background">@drawable/bg_around</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TextTitleInfoForm">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="TextTextInfoForm">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>
</resources>